    "version": "0.2.0",
    "configurations": [
        {
            "name": "nador_app (Debug)",
            "type": "cppdbg",
            "request": "launch",
            "args": [],
            "environment": [],
            "program": "${workspaceFolder}/out/Debug/bin/nador_test_app.exe",
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\MinGW\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "nador_app (Release)",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/Release/bin/nador_test_app.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal"
        },   
    ]
}